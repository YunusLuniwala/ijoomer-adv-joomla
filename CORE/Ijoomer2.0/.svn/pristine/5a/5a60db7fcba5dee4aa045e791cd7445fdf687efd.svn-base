<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ijoomer_map_popup_blue" >

    <ImageView
        android:id="@+id/imgMapUserAvatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:padding="2dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_weight="1">

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtMapUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/white" />

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtMapContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/white" />
    </LinearLayout>

    <com.ijoomer.customviews.IjoomerButton
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:background="@drawable/com_facebook_close" />

</LinearLayout>