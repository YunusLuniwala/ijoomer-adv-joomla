<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/lnrWriteWhatsInYourMind"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone" >

        <com.ijoomer.customviews.IjoomerEditText
            android:id="@+id/edtWhatsInYourMind"
            style="?edittext_h2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:gravity="top|left"
            android:hint="@string/whatsinyourmind"
            android:lines="3"
            android:maxLines="3" />

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/btnSend"
            style="?button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/send" />
    </LinearLayout>

    <com.ijoomer.customviews.IjoomerTextView
        android:id="@+id/txtRecentActivities"
        style="?textview_blue_h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recent_activities"
        android:textStyle="bold"
        android:visibility="gone" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:smoothScrollbar="true" />

</LinearLayout>