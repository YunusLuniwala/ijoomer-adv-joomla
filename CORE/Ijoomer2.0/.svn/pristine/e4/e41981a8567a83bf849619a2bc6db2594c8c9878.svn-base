<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/jom_wall_activity_bottombox1"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtPhotoRemove"
                style="?textview_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:clickable="false"
                android:drawableLeft="@drawable/jom_remove"
                android:drawablePadding="2dp"
                android:text="@string/remove"
                android:visibility="gone" />

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtPhotoDownload"
                style="?textview_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:drawableLeft="@drawable/jom_download"
                android:drawablePadding="2dp"
                android:text="@string/download" />

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtPhotoShare"
                style="?textview_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:drawableLeft="@drawable/jom_share"
                android:drawablePadding="2dp"
                android:text="@string/share" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtPhotoReport"
                    style="?textview_h2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:drawableLeft="@drawable/jom_report"
                    android:drawablePadding="2dp"
                    android:text="@string/report" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrPhoto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="fill_parent"
                    android:layout_height="270dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/jom_wall_activity_topbox" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/pbrPhotoViewPager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <com.ijoomer.customviews.IjoomerButton
                android:id="@+id/btnPhotoCaptionEdit"
                style="?button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/edit"
                android:textSize="10dp"
                android:visibility="gone" />

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtPhotoCaption"
                style="?textview_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="3dp"
                android:text="Mahabaleshwer trip really was amazing sa;sldjk fla;sjldsfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdf fjsf"
                android:visibility="visible" />

            <com.ijoomer.customviews.IjoomerEditText
                android:id="@+id/edtPhotoCaption"
                style="?edittext_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="Mahabaleshwer trip really was amazing sa;sldjk fla;sjldsfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdf fjsf"
                android:visibility="gone" />

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtPhotoCurrentView"
                style="?textview_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="1/10" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jom_wall_activity_bottombox"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtPhotoLikeCount"
                style="?textview_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:drawableLeft="@drawable/ijoomer_like_icon"
                android:drawablePadding="2dp"
                android:text="0" />

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtPhotoDislikeCount"
                style="?textview_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:drawableLeft="@drawable/ijoomer_dislike_icon"
                android:drawablePadding="2dp"
                android:text="0" />

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtPhotoCommentCount"
                style="?textview_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:drawableLeft="@drawable/jom_comment"
                android:drawablePadding="2dp"
                android:text="0" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtPhotoTagCount"
                    style="?textview_h2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:drawableLeft="@drawable/jom_tag"
                    android:drawablePadding="2dp"
                    android:text="0" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrPhotoComment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <com.ijoomer.customviews.IjoomerEditText
            android:id="@+id/edtPhotoWriteComment"
            style="?edittext_h2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:gravity="top|left"
            android:hint="@string/write_comment"
            android:lines="3"
            android:maxLines="3" />

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/btnSend"
            style="?button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/send" />
    </LinearLayout>

</LinearLayout>