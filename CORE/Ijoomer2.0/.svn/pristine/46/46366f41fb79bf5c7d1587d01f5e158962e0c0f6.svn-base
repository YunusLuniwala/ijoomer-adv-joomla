<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lnrCreateVideo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:visibility="visible" >

                    <com.ijoomer.customviews.IjoomerEditText
                        android:id="@+id/edtVideoTitle"
                        style="?edittext_h2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:hint="@string/videos_title" />

                    <com.ijoomer.customviews.IjoomerEditText
                        android:id="@+id/edtVideoDescription"
                        style="?edittext_h2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:hint="@string/description" />

                    <com.ijoomer.customviews.IjoomerEditText
                        android:id="@+id/edtVideoLocation"
                        style="?edittext_h2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:hint="@string/locaton" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" >

                        <com.ijoomer.customviews.IjoomerTextView
                            android:id="@+id/txtVideoCategory"
                            style="?textview_h3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="@string/category" />

                        <Spinner
                            android:id="@+id/spnVideoCategory"
                            style="?spinner"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" >

                        <com.ijoomer.customviews.IjoomerTextView
                            android:id="@+id/txtVideoWhoCanSee"
                            style="?textview_h3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="@string/who_can_see" />

                        <Spinner
                            android:id="@+id/spnWhoCanSee"
                            style="?spinner"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.ijoomer.customviews.IjoomerButton
                    android:id="@+id/btnCancle"
                    style="?button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="@string/cancel" />

                <com.ijoomer.customviews.IjoomerButton
                    android:id="@+id/btnSave"
                    style="?button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:text="@string/save" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrVideo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/lnrVideo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:visibility="visible" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/jom_wall_activity_topbox"
                        android:orientation="vertical"
                        android:padding="5dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical" >

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" >

                                    <ImageView
                                        android:id="@+id/imgVideoAvatar"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitXY" />

                                    <ImageView
                                        android:id="@+id/imgUserImage"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/jom_wall_video_play" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="5dp" >

                                <com.ijoomer.customviews.IjoomerTextView
                                    android:id="@+id/txtVideoTitle"
                                    style="?textview_h3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="marquee"
                                    android:scrollHorizontally="true"
                                    android:singleLine="true" />

                                <com.ijoomer.customviews.IjoomerTextView
                                    android:id="@+id/txtVideoBy"
                                    style="?textview_h2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true" />

                                <com.ijoomer.customviews.IjoomerTextView
                                    android:id="@+id/txtVideoDateLocation"
                                    style="?textview_h2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="marquee"
                                    android:scrollHorizontally="true"
                                    android:singleLine="true" />

                                <com.ijoomer.customviews.IjoomerTextView
                                    android:id="@+id/txtVideoPriavcy"
                                    style="?textview_h2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <com.ijoomer.customviews.IjoomerTextView
                                    android:id="@+id/txtVideoCategorie"
                                    style="?textview_h2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>

                        <com.ijoomer.customviews.IjoomerTextView
                            android:id="@+id/txtVideoDesciption"
                            style="?textview_h2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/jom_wall_activity_bottombox"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:visibility="visible" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <com.ijoomer.customviews.IjoomerTextView
                                android:id="@+id/txtVideoLikeCount"
                                style="?textview_h2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:drawableLeft="@drawable/ijoomer_like_icon"
                                android:drawablePadding="2dp" />

                            <com.ijoomer.customviews.IjoomerTextView
                                android:id="@+id/txtVideoDislikeCount"
                                style="?textview_h2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:drawableLeft="@drawable/ijoomer_dislike_icon"
                                android:drawablePadding="2dp" />

                            <com.ijoomer.customviews.IjoomerTextView
                                android:id="@+id/txtVideoCommentCount"
                                style="?textview_h2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:drawableLeft="@drawable/jom_comment"
                                android:drawablePadding="2dp" />

                            <com.ijoomer.customviews.IjoomerTextView
                                android:id="@+id/txtVideoTag"
                                style="?textview_h2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:drawableLeft="@drawable/jom_tag"
                                android:drawablePadding="2dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="right" >

                                <com.ijoomer.customviews.IjoomerTextView
                                    android:id="@+id/txtVideoShare"
                                    style="?textview_h2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="3dp"
                                    android:drawableLeft="@drawable/jom_share"
                                    android:drawablePadding="2dp"
                                    android:text="@string/share" />

                                <com.ijoomer.customviews.IjoomerTextView
                                    android:id="@+id/txtVideoReport"
                                    style="?textview_h2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="3dp"
                                    android:drawableLeft="@drawable/jom_report"
                                    android:drawablePadding="2dp"
                                    android:text="@string/report" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnrVideoWriteComment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" >

                    <com.ijoomer.customviews.IjoomerEditText
                        android:id="@+id/edtVideoWriteComment"
                        style="?edittext_h2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:gravity="top|left"
                        android:hint="@string/write_comment"
                        android:lines="3"
                        android:maxLines="3" />

                    <com.ijoomer.customviews.IjoomerButton
                        android:id="@+id/btnSend"
                        style="?button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/send" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>