<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?background"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/lnrVideoHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/jom_friend_member_tab_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3" >

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtAllVideos"
                style="?textview_h3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/all_videos" />

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtMyVideos"
                style="?textview_h3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/my_videos" />

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtAddVideos"
                style="?textview_h3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/add_video" />
        </LinearLayout>
    </LinearLayout>

    <com.ijoomer.customviews.IjoomerButton
        android:id="@+id/btnAddVideo"
        style="?button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/add_video"
        android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lnrCreateVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/jom_album_detail_header_bg" >

                        <com.ijoomer.customviews.IjoomerTextView
                            android:id="@+id/txtUploadVideo"
                            style="?textview_h2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/jom_album_detail_header_divider"
                            android:gravity="center"
                            android:text="@string/uplod_video"
                            android:textColor="@color/blue" />

                        <com.ijoomer.customviews.IjoomerTextView
                            android:id="@+id/txtLinkVideo"
                            style="?textview_h2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/link_video" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnrUploadVideo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <com.ijoomer.customviews.IjoomerEditText
                            android:id="@+id/edtVideoFile"
                            style="?edittext_h2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:maxLines="1"
                            android:singleLine="true" />

                        <com.ijoomer.customviews.IjoomerButton
                            android:id="@+id/btnBrowse"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="2dp"
                            android:background="@color/blue"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="@string/browse"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnrLinkVideo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" >

                        <com.ijoomer.customviews.IjoomerEditText
                            android:id="@+id/edtVideoLink"
                            style="?edittext_h2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:hint="@string/videos_link_url"
                            android:singleLine="true" />
                    </LinearLayout>

                    <com.ijoomer.customviews.IjoomerEditText
                        android:id="@+id/edtVideoTitle"
                        style="?edittext_h2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:hint="@string/videos_title"
                        android:singleLine="true" />

                    <com.ijoomer.customviews.IjoomerEditText
                        android:id="@+id/edtVideoDescription"
                        style="?edittext_h2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="left|top"
                        android:hint="@string/description"
                        android:lines="3"
                        android:maxLines="3" />

                    <com.ijoomer.customviews.IjoomerEditText
                        android:id="@+id/edtVideoCaption"
                        style="?edittext_h2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="left|top"
                        android:hint="@string/say_about_video"
                        android:lines="3"
                        android:maxLines="3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp" >

                        <com.ijoomer.customviews.IjoomerEditText
                            android:id="@+id/edtVideoLocation"
                            style="?edittext_h2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/locaton"
                            android:singleLine="true" />

                        <ImageView
                            android:id="@+id/imgMap"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:padding="2dp"
                            android:src="@drawable/jom_map_pin" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" >

                        <com.ijoomer.customviews.IjoomerTextView
                            android:id="@+id/txtVideoCategory"
                            style="?textview_h3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="@string/category" />

                        <Spinner
                            android:id="@+id/spnVideoCategory"
                            style="?spinner"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" >

                        <com.ijoomer.customviews.IjoomerTextView
                            android:id="@+id/txtVideoWhoCanSee"
                            style="?textview_h3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="@string/who_can_see" />

                        <Spinner
                            android:id="@+id/spnWhoCanSee"
                            style="?spinner"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.ijoomer.customviews.IjoomerButton
                    android:id="@+id/btnCancle"
                    style="?button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="@string/cancel" />

                <com.ijoomer.customviews.IjoomerButton
                    android:id="@+id/btnUpload"
                    style="?button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:text="@string/upload" />
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrVideo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/lnrVideoSearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical" >

            <com.ijoomer.customviews.IjoomerEditText
                android:id="@+id/editSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/jom_friend_member_search"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/imgSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/jom_search_icon" />
        </LinearLayout>

        <ListView
            android:id="@+id/lstVideo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:cacheColorHint="#00000000"
            android:divider="@color/blue"
            android:dividerHeight="0dp"
            android:smoothScrollbar="true"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>